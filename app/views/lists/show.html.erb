<div class="container">
  <div class="cards mt-5">
    <ul>
      <% @bookmarks.each do |bookmark| %>
        <li>
          <p>
            <%= bookmark.movie.title %>
          </p>
          <p>
            Overview: <%= bookmark.movie.overview %>
          </p>
          <p>
            Rating: <%= bookmark.movie.rating %>
          </p>
          <img src="<%= bookmark.movie.poster_url %>" alt="Movie Poster">
          <%= link_to lists_path(@list), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } do %>
            <i class="fa-solid fa-trash remove"></i>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>


    <div class="text-center mt-3">
      <%= link_to "New movie", new_list_bookmark_path(@list), class: "btn btn-outline-secondary" %>
    </div>

    <div class="text-center mt-3">
      <%= link_to "Back to List", lists_path, class: "btn btn-outline-secondary"%>
    </div>

</div>
